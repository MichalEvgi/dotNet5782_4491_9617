<Window x:Class="PL.ParcelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ParcelWindow" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Grid Name="addParcel" Visibility="Hidden" Background="#FFD3F6F3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="SenderIdLbl" Content="Sender ID:" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"/>
            <Label x:Name="TargetIdLbl" Content="Target ID:"  HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"  FontWeight="Bold" FontSize="20"/>
            <Label x:Name="WeightLbl" Content="Weight:"  HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"/>
            <Label x:Name="PriorityLbl" Content="Priority:"  HorizontalAlignment="Center" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"/>
            <TextBox x:Name="SenderIdtxtBox"  HorizontalAlignment="Center" Grid.Column="2" VerticalAlignment="Center" TextWrapping="Wrap" Height="40"  Width="126" TextChanged="SenderIdtxtBox_TextChanged"/>
            <TextBox x:Name="TargetIdtxtBox" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Height="40"  Width="126" TextChanged="TargetIdtxtBox_TextChanged"/>
            <ComboBox x:Name="WeightCmb" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Height="40"  Width="126"/>
            <ComboBox x:Name="PriorityCmb" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" Height="40"  Width="126"/>
            <Button x:Name="AddButton" Content="Add"  HorizontalAlignment="Center" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Height="49" Width="118" Click="AddButton_Click" FontWeight="Bold" FontSize="20" Background="Transparent"/>
            <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" Height="49" Width="127" Click="CancelButton_Click" FontWeight="Bold" FontSize="20" Background="Transparent"/>

        </Grid>
        <Grid x:Name="actions" Visibility="Visible" Background="#FFD3F6F3">
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="57*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="140*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="140*"/>
                    <ColumnDefinition Width="170*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="545*"/>
                    <RowDefinition Height="0*"/>
                    <RowDefinition Height="79*"/>
                </Grid.RowDefinitions>
                <Label x:Name="Idlbl" Content="Id:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Grid.Column="1" Width="61" Margin="0,70,0,0" FontWeight="Bold" FontSize="14" />
                <Label x:Name="Senderlbl" Content="Sender:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="40" Grid.Column="1" Margin="1,130,0,0" FontWeight="Bold" FontSize="14"/>
                <Label x:Name="Targetlbl" Content="Target:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Height="46" Grid.Column="1" Margin="0,190,0,0" FontWeight="Bold" FontSize="14"/>
                <Label x:Name="Weightlbl" Content="Weight:" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="76" Height="31" Grid.Column="1" Margin="0,250,0,0" FontWeight="Bold" FontSize="14"/>
                <Label x:Name="Prioritylbl" Content="Priority:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Grid.Column="1" Height="34" Margin="0,310,0,0" FontWeight="Bold" FontSize="14"/>
                <Button x:Name="Deletebt" Content="delete" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="80" Grid.Column="4" FontWeight="Bold" FontSize="14" Background="Transparent" Grid.Row="2"/>
                <TextBox x:Name="Idtxtbox" HorizontalAlignment="Left" Margin="0,70,0,0" Text="{Binding Mode=OneWay, Path=Id}" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Height="40" IsReadOnly="True" Grid.Column="2" />
            <Button x:Name="Senderbt" Content="show sender customer" HorizontalAlignment="Left" Margin="0,130,0,0" VerticalAlignment="Top" Width="150" FontSize="11" Height="40" Grid.Column="2" FontWeight="Bold" Background="Transparent"/>
            <Button x:Name="Targetbt" Content="show target customer" HorizontalAlignment="Left" Margin="0,190,0,0" VerticalAlignment="Top" Width="150" FontSize="11" Height="40" Grid.Column="2" FontWeight="Bold" Background="Transparent"/>
            <TextBox x:Name="Weighttxtbox" HorizontalAlignment="Left" Margin="0,250,0,0" Text="{Binding Mode=OneWay, Path=Weight}"  VerticalAlignment="Top" Width="130" Height="40" IsReadOnly="True" Grid.Column="2"/>
            <TextBox x:Name="Prioritytxtbox" HorizontalAlignment="Left" Margin="0,310,0,0" Text="{Binding Mode=OneWay, Path=Priority}" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Height="40" IsReadOnly="True" Grid.Column="2"/>
                <Button x:Name="Exitbt" Content="exit" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="40" Width="80" Grid.Row="2" Grid.Column="5" FontWeight="Bold" FontSize="14" Background="Transparent"/>
           </Grid>
    </Grid>
</Window>
